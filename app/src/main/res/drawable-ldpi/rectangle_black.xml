<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient android:startColor="#414244" android:endColor="#313233"
				android:angle="0" />
			<padding android:left="12dp" android:top="7dp" android:right="12dp"
				android:bottom="7dp" />
			<corners android:radius="16dp" />
			<stroke android:width="1dp" android:color="#151C2C" />
		</shape>
	</item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#313233" android:endColor="#414244"
                android:angle="90" />
            <padding android:left="12dp" android:top="7dp" android:right="12dp"
                android:bottom="7dp" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#151C2C" />
        </shape>
    </item>
</selector>
